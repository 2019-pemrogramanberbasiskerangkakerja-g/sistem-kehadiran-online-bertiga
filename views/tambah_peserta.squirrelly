<!DOCTYPE html>
<html lang="en">
<head>

  {{include(head)/}}

</head>
<body>

{{include(navbar)/}}

<!-- Content here -->
    {{ if(options.status) }}
        {{ if(options.status == 'sukses') }}
            <div class="alert alert-success text-center">
                {{ pesan }}
            </div>
        {{ #else }}
            <div class="alert alert-danger">
                {{ pesan }}
            </div>
        {{ /if }}
    {{ /if }}

    <div class="card">
        <div class="card-body">
            <div class="col-md-6 offset-md-3">
                <form action="/vtambahpesertaPost" method="post">
                    <div class="form-group">
                        <label for="nrp">NRP</label>
                        <input type="text" name="nrp" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="kode_matkul">Mata Kuliah ID</label>
                        <input type="text" name="kode_matkul" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Submit">
                    </div>
                </form>
            </div>
        </div>
    </div>

{{include(foot)/}}

</body>
</html>
